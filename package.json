{
  "name": "jshooks-template",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild:compile": "esbuild contracts/index.ts --bundle --outfile=contracts/dist/index.js --format=esm",
    "prebuild:js-clean": "tsx hook_cleaner.ts contracts/dist/index.js contracts/dist/index.js",
    "prebuild": "pnpm prebuild:compile && pnpm prebuild:js-clean",
    "build": "js2wasm-cli contracts/dist/index.js build/",
    "postbuild": "rm -rf contracts/dist",
    "test": "LOG_LEVEL=error VITE_CJS_TRACE=true vitest",
    "test:unit": "pnpm test -- --exclude ./test/index.test.ts",
    "format": "biome format . --write",
    "lint": "biome lint .",
    "check": "biome check --write .",
    "xrpld:start": "xrpld-netgen up:standalone --protocol xahau --version 2024.6.3-jshooks+903",
    "xrpld:stop": "xrpld-netgen down:standalone  --protocol xahau --version 2024.6.3-jshooks+903",
    "trace": "docker logs --tail 100 -f xahau 2>&1 | cut -d ' ' -f 5- | grep -E 'HookInfo|HookTrace|HookError|preclaim result'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@transia/hooks-toolkit": "^1.0.13",
    "@transia/xahau-models": "2.7.3-alpha.27",
    "@transia/xrpl": "2.7.3-alpha.24",
    "dotenv": "^16.4.1",
    "jshooks-api": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.1",
    "@transia/ripple-binary-codec": "1.4.6-alpha.9",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^20.14.5",
    "esbuild": "^0.21.3",
    "js2wasm-cli": "^1.0.0",
    "lefthook": "^1.6.16",
    "tsx": "^4.10.5",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.3.1"
  }
}
